@model SignInViewModel
@{
    ViewData["Title"] = "Sign in ";
}

<section id="signin">
    <div class="container">
        @if (!string.IsNullOrEmpty(ViewData["ErrotMassage"]?.ToString()))
        {
            <div class="alert">
                @ViewData["ErrotMassage"]
            </div>
        }
        <form method="post" asp-controller="Auth" asp-action="SignIn" novalidate>
            <h1>Sign in to your account </h1>
            <p>Dont have a account? <a asp-controller="Auth" asp-action="SignUp"> Sign up here</a>.</p>

            <div class="content">               
                <div id="form-email" class=" input-group">
                    <label asp-for="Email"></label>                    
                    <input asp-for="Email" />
                </div>

                <div id="form-password" class=" input-group">
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password"></span>
                    <input asp-for="Password" />
                </div>
                <div id="form-remember" class=" checkbox-group">
                        <input asp-for="RememberMe" />
                        <label asp-for="RememberMe">
                            Keep me signed in.
                        </label>                        
                </div>
                <button class="btn-theme-s" tpe="submit">Sign in</button>

            </div>

        </form>
    </div>
</section>